alias cl=clear
alias v=nvim
alias ud='sudo nixos-rebuild switch --flake $NIXCFG_DIR'
alias ls='eza --group-directories-last'
alias ll='ls -lbg --icons'
alias la='ls -a'
alias lla='ll -a'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias sd="hyprshutdown -t 'Shutting down...' --post-cmd 'shutdown -P 0' || shutdown -h now"
alias rb="hyprshutdown -t 'Restarting...' --post-cmd 'reboot' || shutdown -r now"
alias g='lazygit'
alias gd='lazygit -w $DOTFILES_DIR'
alias ts='tmux-sessionizer'
